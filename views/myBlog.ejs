    document.getElementById("heading" + blog).setAttribute("hidden", true)
    document.getElementById("edit" + blog).setAttribute("hidden", true)
    document.getElementById("done" + blog).removeAttribute("hidden")
    document.getElementById("input" + blog).removeAttribute("hidden")
  }
