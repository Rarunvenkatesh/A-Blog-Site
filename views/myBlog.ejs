<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
   <style>
    body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f5f5f5;
}

.container {
  max-width: 800px;
  margin: 20px auto;
  padding: 20px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.container p {
  margin: 0;
}

.jumbotron {
  padding: 20px;
  margin-top: 20px;
  background-color: #f9f9f9;
  border-radius: 8px;
}

button {
  cursor: pointer;
  border: none;
  padding: 8px 16px;
  border-radius: 4px;
  background-color: #007bff;
  color: #fff;
  transition: background-color 0.3s ease;
}

button:hover {
  background-color: #0056b3;
}

textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    height: 150px;
}

.edit {
  display: inline-block;
  margin-right: 10px;
}

.hidden {
  display: none;
}


   </style>
</head>
<body>
  
    <!-- <a href="/newblog">crate a new blog</a> -->
    <div class="container">
      <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
          
          
          <!-- <h1>By: <%= blog.username %></h1> -->

          <h1 id="heading<%= blog.heading %>"  >HEADING: <%= blog.heading %></h1>
          <form action="/delete" method="post">
          <div class="jumbotron text-center">
        <!-- <input type="checkbox" onchange="this.form.submit()" name="headingtd" value="<%= blog.heading %>" > -->
            <button type="submit" value="<%= blog.heading %>" name="headingtd">delete Blog</button>
            </form>
            
    <h4>Edit Blog Heading:</h4>
      <form class="edit" action="/edit" method="post">
        <input type="text" hidden  name="notupdatedItemheading" value="<%= blog.heading %>">
        <input id="input<%=blog.heading %>" type="text" name="updatedItemheading" value="<%= blog.heading %>" autocomplete="off"
          autofocus="true"  />
          <br>
          <br>
        <button id="done<%=blog.heading %>" class="edit" type="submit"  >save</button>
      </form>
      <!-- <button id="edit<%= blog.heading %>" class="edit" onclick="handler('<%= blog.heading %>')">edit</button> -->
      <!-- <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a> -->
      <!-- <p>By: <%= blog.username %></p> -->
      <h4>Edit Blog:</h4>
      <br>
      <br>
      <!-- <p id="headingg<%= blog.blog %>"><%= blog.blog %></p> -->

      <form class="editblog" action="/editblog" method="post">
        <!-- <input type="text" hidden  name="notupdatedItemblogg" value="<%= blog.blog %>"> -->
        <textarea name="notupdatedItemblogg"   cols="30" rows="10" value="Initial text" hidden><%= blog.blog %></textarea>
          <textarea name="updatedItemblogg"  id="inputt<%=blog.blog %>" cols="30" rows="10" value="Initial text" ><%= blog.blog %></textarea>
          <button id="donee<%=blog.blog %>" class="edit" type="submit" >save</button>
      
        </form>
        <p>--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</p>
      </div>
        <% }); %>
      <% } else { %>
        <p>No blogs found</p>
        
      <% } %>
      
    </div>
    
</body>

<script>
